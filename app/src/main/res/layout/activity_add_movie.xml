<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/addImg"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:src="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/addTxt"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:hint="Title:"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_above="@+id/addPlot"
        android:layout_toRightOf="@+id/addImg"
        android:layout_toEndOf="@+id/addImg" />

    <TextView
        android:id="@+id/addGenre"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:text="Genre:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_below="@+id/addPlot"
        android:layout_alignRight="@+id/addRat"
        android:layout_alignEnd="@+id/addRat"
        android:layout_marginTop="47dp" />

    <TextView
        android:id="@+id/addRat"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:layout_below="@+id/addGenre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="400sp"
        android:layout_height="100sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="plot:"
        android:id="@+id/addPlot"
        android:textSize="30sp"
        android:layout_below="@+id/addImg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/addType"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorHint="#000"
        android:textColorLink="#000"
        android:textColorHighlight="#000"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="147dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



        <Button
            android:id="@+id/addBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Movie"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/addImg"
            android:layout_alignEnd="@+id/addImg"
            android:layout_marginBottom="50dp" />


</RelativeLayout>